<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BagsActivity">

    <ListView
        android:id="@+id/bagList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawSelectorOnTop="true"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="157dp"></ListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Přidat tašku"
        app:layout_constraintBottom_toTopOf="@+id/newBagInput"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <EditText
        android:id="@+id/newBagInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newBagButton"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLength="64"
        android:inputType="text"
        android:hint="Název tašky"></EditText>

    <Button
        android:id="@+id/newBagButton"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_input_add"
        android:tooltipText="Přidat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>