<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchItemActivity">

    <EditText
        android:id="@+id/searchText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hledat"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/scanCodeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <Button
        android:id="@+id/scanCodeBtn"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toStartOf="@+id/addProductBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:tooltipText="Skenovat kód"
        android:contentDescription="Skenovat kód"></Button>

    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tooltipText="Přidat produkt"
        android:contentDescription="Přidat produkt"></Button>

    <ListView
        android:id="@+id/itemSuggestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanCodeBtn"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>